@model List<string>
@{
    ViewData["Title"] = "GetRoles";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@ViewBag.Name roles</h4>
                        <a class="btn btn btn-outline-dark" asp-controller="User" asp-action="AddRole" asp-route-id="@ViewBag.id">Add Role</a>
                        <p class="card-description">
                            Add class <code>.table-{color}</code>
                        </p>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Action
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var roleName in Model)
                                    {
                                        <tr class="table-success">
                                           
                                            <td>
                                                @roleName
                                            </td>
                                            <td>
                                                <a class="btn btn  btn-primary " asp-controller="User" asp-action="RemoveRole" asp-route-id="@ViewBag.id" asp-route-roleName="@roleName">Remove roles</a>
                                                @*<a class="btn btn warning" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                                <a class="btn btn danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@

                                            </td>

                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

