@model List<UserVm>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Table with contextual classes</h4>
                        <p class="card-description">
                            Add class <code>.table-{color}</code>
                        </p>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            FullName
                                        </th>
                                        <th>
                                            UserName
                                        </th>
                             
                                        <th>
                                            Roles
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (UserVm item in Model)
                                    {
                                    <tr class="table-success">
                                        <td>
                                            @item.Fullname
                                        </td>
                                        <td>
                                            @item.Username
                                        </td>
                                        <td>
                                            @item.Roles
                                        </td>
                                        <td>
                                            <a class="btn btn primary" asp-controller="User" asp-action="GetRoles" asp-route-id="@item.Id">Manager Roles</a>
                                            <a class="btn btn warning" asp-controller="User" asp-action="ChangePassword" asp-route-id="@item.Id">Change Password</a>
                                            <a class="btn btn danger" asp-controller="User" asp-action="" asp-route-id="@item.Id">Block</a>

                                        </td>

                                    </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

