@model AddRoleVM
@{
    ViewData["Title"] = "AddRole";
}


@section Scripts{
    <partial name="_PartialView" />
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });
    </script>
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add Role</h4>

                        <form method="post" asp-controller="User" asp-action="AddRole" class="forms-sample">
                            <div class="form-group">
                                <label for="exampleInputUsername1">RoleName</label>
                               <select class="form-control" asp-for="RoleName">
                                   @foreach (var role in Model.Roles)
                                   {
                                       <option>@role</option>
                                   }
                               </select>
                                <span asp-validation-for="RoleName"></span>
                            </div>
                          

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

