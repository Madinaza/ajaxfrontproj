@model ChangePasswordVM
@{
    ViewData["Title"] = "ChangePassword";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Change Password of User:@ViewBag.FullName</h4>
                      <div asp-validation-summary="ModelOnly"></div>

                        <form method="post" asp-controller="User" asp-action="ChangePassword" class="forms-sample">
                            <div class="form-group">
                                <label for="exampleInputUsername1">OldPassword</label>
                                <input asp-for="OldPassword" class="form-control" id="exampleInputUsername1" placeholder="Logo">
                                <span asp-validation-for="OldPassword"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">NewPassword</label>
                                <span asp-validation-for="NewPassword"></span>

                                <input asp-for="NewPassword" class="form-control" id="Description" placeholder="Instagram">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">ConfirmPassword</label>
                                <span asp-validation-for="ConfirmPassword"></span>

                                <input asp-for="ConfirmPassword" class="form-control" id="Description" placeholder="Facebook">
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



