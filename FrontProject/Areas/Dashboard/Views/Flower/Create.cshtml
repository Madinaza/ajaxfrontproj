@model FlowerPostVM
@{
    ViewData["Title"] = "Create";
}

@section Scripts{
    <partial name="_PartialView" />
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });
    </script>
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create new Flower</h4>

                        <form method="post" asp-controller="slider" asp-action="create" enctype="multipart/form-data" class="forms-sample">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Name</label>
                                <input asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Name">
                                <span asp-validation-for="Name"></span>
                            </div>
                             <div class="form-group">
                                <label for="exampleInputUsername1">Price</label>
                                <input asp-for="Price" class="form-control" id="exampleInputUsername1" placeholder="Price">
                                <span asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Desc</label>
                                <span asp-validation-for="Desc"></span>

                                <input asp-for="Desc" class="form-control" id="Description" placeholder="desc">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">MainImage</label>
                                <input accept="image/*" asp-for="MainImage" class="form-control" id="exampleInputUsername1" placeholder="MainImage">
                                <span asp-validation-for="MainImage"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Images</label>
                                <input accept="image/*" asp-for="Images" class="form-control" id="exampleInputUsername1" placeholder="Images">
                                <span asp-validation-for="Images"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Deminsion</label>
                                <input accept="image/*"asp-for="Deminsion" class="form-control" id="exampleInputUsername1" placeholder="Deminsion">
                                <span asp-validation-for="Deminsion"></span>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Weight</label>
                                <input asp-for="Weight" class="form-control" id="exampleInputUsername1" placeholder="Weight">
                                <span asp-validation-for="Weight"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">SKUCode</label>
                                <input asp-for="SKUCode" class="form-control" id="exampleInputUsername1" placeholder="SKUCode">
                                <span asp-validation-for="SKUCode"></span>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Campaign</label>
                              <select class="form-control" asp-for="CampaignId" >
                                  <option></option>
                                    @foreach(var campaig in Model.Campaigns)
                                    {
                                        <option value=@campaig.Id>@campaig.DiscountPercent</option>
                                    }
                                </select>

                                <span asp-validation-for="CampaignId"></span>
                            </div>


                             <div class="form-group">
                                <label for="exampleInputUsername1">CategoryId</label>
                              
                                   <select class="form-control" asp-for="CategoryId" >
                                  <option></option>
                                    @foreach(var category in Model.Categories)
                                    {
                                        <option value=@category.Id>@category.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId"></span>
                            </div>



                          



                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
