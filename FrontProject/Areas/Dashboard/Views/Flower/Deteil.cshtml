@model Flower
@{
    ViewData["Title"] = "Deteil";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Name</h4>

                        <p>
                            Desc:
                            @Html.Raw(Model.Desc)
                        </p>
                        <p>
                            Price :
                            @Model.Price
                        </p>
                        <p>
                            Weight :
                            @Model.Weight
                        </p>
                        <p>
                            Dimension :
                            @Model.Deminsion
                        </p>
                        <p>
                            MainImage:
                            <img style="width: 300px;" src="~/assets/images/@Model.MainImage" />
                        </p>
                        <div class="d-flex justify-content-center align-items-center">
                            @foreach (var image in Model.FlowerImages)
                            {
                                <img style="width: 200px; margin: 5px;" src="~/assets/images/@image.Name" />
                            }
                        </div>

                      

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>