@model List<FlowerListVm>
@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive pt-3">
    <a asp-action="CreateMultiple" class="btn btn-primary">Create multiple</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                 MainImage
                </th>

                <th>
                    Action
                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (var flower in Model)
            {
            <tr class="table-success">
                <td>
                    @flower.id
                </td>
                <td>
                    @flower.Name
                </td>
              
                <td>
                    <img style="width:250px;height:250px" src="~/assets/images/@flower.MainImage"/>
                </td>
                 <td>
                    @flower.Price
                </td>
                <td>
                    <a class="btn btn primary" asp-controller="Flower" asp-action="Deteil" asp-route-id="@flower.id" >Detail</a>
                    <a class="btn btn warning" asp-controller="Flower" asp-action="Update" asp-route-id="@flower.id">Update</a>
                    <a class="btn btn danger" asp-controller="Flower" asp-action="Delete" asp-route-id="@flower.id">Delete</a>

                </td>

            </tr>

            }

        </tbody>
    </table>
</div>

