@model List<Layout>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Table with contextual classes</h4>
                        <p class="card-description">
                            Add class <code>.table-{color}</code>
                        </p>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Id
                                        </th>
                                        <th>
                                            Logo
                                        </th>
                                        <th>
                                            InstagramURL
                                        </th>
                                        <th>
                                            FacebookURL
                                        </th>
                                        <th>
                                            Action
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (Layout item in Model)
                                    {
                                    <tr class="table-success">
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            @item.Logo
                                        </td>
                                        <td>
                                            @item.InstagramUrl
                                        </td>
                                        <td>
                                            @item.FacebookUrl
                                        </td>
                                        <td>
                                            <a class="btn btn warning" asp-controller="Layout" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                            <a class="btn btn danger" asp-controller="Layout" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                                        </td>

                                    </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
