@model Layout
@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create new Layout</h4>

                        <form method="post" asp-controller="layout" asp-action="create" class="forms-sample">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Logo</label>
                                <input asp-for="Logo" class="form-control" id="exampleInputUsername1" placeholder="Logo">
                                <span asp-validation-for="Logo"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">InstagramUrl</label>
                                <span asp-validation-for="InstagramUrl"></span>

                                <input asp-for="InstagramUrl" class="form-control" id="Description" placeholder="Instagram">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">FacebookUrl</label>
                                <span asp-validation-for="FacebookUrl"></span>

                                <input asp-for="FacebookUrl" class="form-control" id="Description" placeholder="Facebook">
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

